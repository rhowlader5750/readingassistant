{
  "manifest_version": 3,
  "name": "React Chrome Sidebar Extension",
  "version": "1.0",
  "description": "A Chrome extension with a React-powered sidebar.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>", "file:///*"],
  "action": {
    "default_title": "Inject Sidebar"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/sidebar.js", "dist/sidebar.css"],
      "matches": ["<all_urls>"]
    }
  ]
}